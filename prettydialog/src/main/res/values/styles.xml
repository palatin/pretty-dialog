<resources>

    <style name="PrettyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>



    <style name="PrettyDialogLight" parent="PrettyDialog">
        <item name="backgroundColor">#ffffff</item>
        <item name="buttonNeutralTitleColor">#007aff</item>
        <item name="buttonPositiveTitleColor">#00c853</item>
        <item name="buttonNegativeTitleColor">#d50000</item>
        <item name="separatorColor">#aaa</item>
        <item name="android:textColor">#000</item>
        <item name="titleColor">#000</item>
    </style>

    <style name="PrettyDialogGrey" parent="PrettyDialogLight">
        <item name="backgroundColor">#cccccc</item>
    </style>

    <style name="PrettyDialogDark" parent="PrettyDialog">
        <item name="backgroundColor">#212121</item>
        <item name="buttonNeutralTitleColor">#007aff</item>
        <item name="buttonPositiveTitleColor">#00c853</item>
        <item name="buttonNegativeTitleColor">#d50000</item>
        <item name="separatorColor">#aaa</item>
        <item name="android:textColor">#ffa726</item>
        <item name="titleColor">#fafafa</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#9e9e9e</item>
        <item name="boxBackgroundColor">#fff</item>
        <item name="android:textColor">#000</item>
        <item name="boxStrokeWidth">0.5dp</item>
    </style>



</resources>
